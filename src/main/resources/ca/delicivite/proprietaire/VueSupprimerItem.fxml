<?xml version="1.0" encoding="UTF-8"?>
<!--fxml de l'interface proprietaire : section suppression d'un item de menu-->
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxWidth="624.0" prefHeight="400.0" prefWidth="624.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.delicivite.proprietaire.ControllerSupprimerItem">
    <!--Lien avec le fichier CSS correspondant-->

    <stylesheets>
        <URL value="@proprietaire.css" />
    </stylesheets>

    <!--[1] : Contenu de la sous fenetre -->
    <center>
        <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <Label prefHeight="18.0" prefWidth="197.0" text="Nom de l'item à sélectionner:" textFill="#424242" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <font>
               <Font name="Lexend Light" size="12.0" />
            </font></Label>
            <ChoiceBox fx:id="item" prefHeight="27.0" prefWidth="291.0" style="-fx-background-color: #FBFAFF; -fx-border-color: #424242; -fx-border-radius: 15;" value="Choisissez un item à supprimer" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <AnchorPane GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6">
                <HBox alignment="CENTER_LEFT" layoutY="-24.0" spacing="10.0" AnchorPane.rightAnchor="21.333333333333314">
                    <Button maxWidth="140.0" onAction="#annuler" prefHeight="31.0" prefWidth="140.0" styleClass="boutonAction" text="Annuler" textFill="#424242">Annuler</Button>
                    <Button onAction="#supprimerItem" prefHeight="31.0" prefWidth="140.0" styleClass="boutonAction" textFill="#424242">Supprimer</Button>
                </HBox>
            </AnchorPane>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </center>

</BorderPane>
