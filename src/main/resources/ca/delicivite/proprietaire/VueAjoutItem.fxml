<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ca.delicivite.proprietaire.ControllerAjoutItem"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <GridPane vgap="10.0" hgap="10.0" alignment="CENTER">
            <padding>
                <Insets top="10.0" left="10.0" right="10.0" bottom="10.0"/>
            </padding>

            <Label GridPane.rowIndex="0" GridPane.columnIndex="0">Nom de l'item:</Label>
            <TextField GridPane.rowIndex="0" GridPane.columnIndex="1" editable="true" fx:id="nomItem"/>
            <Label GridPane.rowIndex="1" GridPane.columnIndex="0">Description:</Label>
            <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" editable="true" fx:id="description"/>
            <Label GridPane.rowIndex="2" GridPane.columnIndex="0">Groupe:</Label>
            <ChoiceBox GridPane.rowIndex="2" GridPane.columnIndex="1" value="Choisissez un groupe" fx:id="groupe"/>
            <AnchorPane GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <HBox AnchorPane.rightAnchor="0" spacing="10.0">
                    <Button styleClass="buttonAction" onAction="#ajouter">Ajouter</Button>
                    <Button styleClass="buttonAction" onAction="#annuler">Annuler</Button>
                </HBox>
            </AnchorPane>
        </GridPane>
    </center>

</BorderPane>

